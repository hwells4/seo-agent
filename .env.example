# API Settings
APP_NAME="SEO Agent API"
APP_VERSION="0.1.0"
APP_DESCRIPTION="Multi-LLM Agentic Content Creation System"
DEBUG=false
HOST="0.0.0.0"
PORT=8000
LOG_LEVEL="INFO"
CORS_ORIGINS="*"

# Authentication
AUTH_REQUIRED=true
API_KEYS="your-api-key-1,your-api-key-2"

# LLM API Keys
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
DEEPSEEK_API_KEY="your-deepseek-api-key"
XAI_API_KEY="your-grok-api-key"

# Database Settings
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="seo_agent"
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432

# Agent Settings
MAX_RETRIES=3
TIMEOUT_SECONDS=300
CONCURRENT_WORKFLOWS=5
CACHE_RESULTS=true
CACHE_TTL_HOURS=24

# Agent-specific Settings
RESEARCH_MAX_SOURCES=20
RESEARCH_MAX_TOKENS=50000
FACTS_MAX_SEARCHES=10
BRIEF_MIN_TOPICS=5
CONTENT_MAX_LENGTH=5000

# Agno Framework Settings
USE_POSTGRES_STORAGE=true
PGVECTOR_ENABLED=false
TEAM_ORCHESTRATION="sequential"
KNOWLEDGE_PROVIDER="pg_vector"
KNOWLEDGE_COLLECTION="seo_agent_knowledge"

# Notification Settings (Optional)
SLACK_WEBHOOK_URL=""
SLACK_CHANNEL=""
EMAIL_NOTIFICATIONS=false
EMAIL_SERVER=""
EMAIL_PORT=587
EMAIL_USERNAME=""
EMAIL_PASSWORD=""
EMAIL_FROM=""
EMAIL_TO='[]'

# Environment
ENVIRONMENT="development"
